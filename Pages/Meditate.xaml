<UserControl x:Class="BecomeSifu.Pages.Meditate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BecomeSifu.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" Background="IndianRed">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="auto"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gold" BorderThickness="1" Grid.Row="0"/>
        <Border BorderBrush="Gold" BorderThickness="1" Grid.Row="1"/>
        <Border BorderBrush="Gold" BorderThickness="1" Grid.Row="2"/>
        <Button Content="Start Meditating" FontWeight="Bold" FontSize="20" Grid.Row="0" Margin="10,10" BorderBrush="Goldenrod" Foreground="crimson">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="PaleGoldenrod"/>
                    <GradientStop Color="Gold" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="999q" Grid.Column="1" HorizontalAlignment="Right" FontSize="12" VerticalAlignment="Top" Margin="0,-3,-2 ,0" />
                <Label Content="PerPractice" Grid.Column="3" FontSize="14"  Foreground="gold" VerticalAlignment="Top" Margin="-5,-5,4,0" />
                <Label Content="Health" Grid.Column="2" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="Gold" Margin="-3,-5,0 ,0" />
                <Label Content="Add" Grid.Column="0" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Top" Foreground="Gold" Margin="2,-5,0 ,0"/>
            </Grid>

        </Grid>

    </Grid>
</UserControl>
