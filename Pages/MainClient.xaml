<UserControl x:Class="BecomeSifu.Pages.MainClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BecomeSifu.Pages"
             xmlns:gif="http://wpfanimatedgif.codeplex.com" 
             mc:Ignorable="d" 
             d:DesignHeight="832" d:DesignWidth="700">
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/Background.png" Stretch="UniformToFill" TileMode="Tile"/>
    </UserControl.Background>
    <UserControl.Resources>
        <RadialGradientBrush x:Key="Selected" RadiusX="0.6" RadiusY="0.7">
            <RadialGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.3"/>
                    <SkewTransform AngleY="80" CenterY="0.5" CenterX="0.3" AngleX="-50"/>
                    <RotateTransform CenterY="0.5" CenterX="0.3"/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadialGradientBrush.RelativeTransform>
            <GradientStop Color="Black" Offset="0.946"/>
            <GradientStop Color="SteelBlue" Offset="0.125"/>
            <GradientStop Color="Black" Offset="0.197"/>
            <GradientStop Color="SteelBlue" Offset="0.416"/>            
        </RadialGradientBrush>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Popup x:Name="MessagePopUp" Placement="Center" MinWidth="749" MinHeight="777"  IsOpen="False" AllowsTransparency="True" PopupAnimation="Fade" Grid.ColumnSpan="2" Grid.RowSpan="2" MouseUp="MessagePopUp_MouseUp">
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.RowSpan="3" Grid.ColumnSpan="3" Fill="#AA000000"/>
                <TextBlock x:Name="Message" Background="#AA4682B4" Foreground="AliceBlue" Padding="5" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="50,50 "/>
            </Grid>
        </Popup>
        <ContentControl x:Name="BackgrounGif" Width="400" Height="325" />
        <TabControl x:Name="PracticeTabHolder" Grid.Row="0" Grid.Column="1" Width="300" Height="332" Background="#00FFFFFF">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">                    
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}, Path=Items.Count}" Value="1">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TabControl.ItemContainerStyle>
            <TabItem>
                <TabControl x:Name="PracticeTabControl"   TabStripPlacement="Bottom" Background="Transparent" BorderThickness="0,0,0,0" Foreground="AliceBlue">
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid>
                                            <Border 
                                                Name="Border"
                                                Background="Transparent"
                                                BorderBrush="Silver"
                                                Margin="1,1"
                                                BorderThickness="1,1,1,1">      
                                                <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"                                                    
                                                    ContentSource="Header"
                                                    Margin="12,2,12,2"
                                                    RecognizesAccessKey="True"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Panel.ZIndex" Value="100" />
                                                <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                                <Setter TargetName="Border" Property="BorderThickness" Value="2" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            </Style>
            </TabControl.ItemContainerStyle>
                </TabControl>
            </TabItem>
        </TabControl>
        <TabControl x:Name="ActionTabControl" Grid.Row="1" Grid.Column="0" Height="450" Width="450" Background="#00FFFFFF" >
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border 
                                                Name="Border"
                                                Margin="0,0,-4,0" 
                                                Background="#00FFFFFF"
                                                BorderBrush="black" 
                                                BorderThickness="1,1,1,1">
                                        <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"                                                    
                                                    ContentSource="Header"
                                                    Margin="12,2,12,2"
                                                    RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="#50FFFFFF" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
        <TabControl x:Name="AdvancedTabControl" Grid.Row="1" Grid.Column="1" TabStripPlacement="Top"  Height="450" Background="#00FFFFFF">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border 
                                                Name="Border"
                                                Margin="0,0,-4,0" 
                                                Background="#00FFFFFF"
                                                BorderBrush="black" 
                                                BorderThickness="1,1,1,1">
                                        <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"                                                    
                                                    ContentSource="Header"
                                                    Margin="12,2,12,2"
                                                    RecognizesAccessKey="True"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="Background" Value="#50FFFFFF" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</UserControl>
